{
  "extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
  "rules": {
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": [
          "color",
          "font-family",
          "font-size",
          "space",
          "math.div",
          "strip-units",
          "linear-scale"
        ]
      }
    ]
  }
}
